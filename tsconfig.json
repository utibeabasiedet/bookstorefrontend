{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2015", 
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/(auth)/signup/components/Register.tsx", "app/(home)/components/testimonal.jsx", "app/(home)/components/Hero.tsx", "app/(auth)/login/components/Login.tsx", "app/(home)/components/TopCategories.tsx", "app/shop/page.tsx", "app/contact/page.jsx"],
  "exclude": ["node_modules"]
}
